%h1= I18n.t('devise.passwords.title_resend')

=form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  %fieldset

    %div
      = f.label :email
      = f.email_field :email

    %button.form-submit.form-nextstep.right
      = I18n.t('devise.passwords.submit_resend')
      %span

  = render "links"