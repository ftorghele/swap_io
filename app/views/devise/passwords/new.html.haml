= javascript_include_tag 'rails.validations'

%h2= I18n.t('devise.passwords.title_resend')

=form_for(resource, :as => resource_name, :url => password_path(resource_name), :validate => true, :html => { :method => :post }) do |f|
  %fieldset

    %div
      = f.label :email
      = f.email_field :email

  %div.form-actions
    = f.submit I18n.t('devise.passwords.submit_resend'), :class => 'btn-primary'

  = render "links"