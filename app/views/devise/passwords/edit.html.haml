= javascript_include_tag 'rails.validations'

%h1= I18n.t('devise.passwords.title_edit')
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :validate => true, :html => { :method => :put }) do |f|

  %fieldset
    = f.hidden_field :reset_password_token

    %div
      = f.label :password
      = f.password_field :password, :value => resource.password

    %div
      = f.label :password_confirmation
      = f.password_field :password_confirmation, :value => resource.password

  %button.form-submit.form-nextstep.right
    = I18n.t('devise.passwords.submit_edit')
    %span

  = render "links"