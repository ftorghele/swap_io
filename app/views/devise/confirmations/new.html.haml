%h1= I18n.t('devise.confirmations.title')
= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|

  %fieldset
    %div
      = f.label :email
      = f.email_field :email

  %button.form-submit.form-nextstep.right
    = I18n.t('devise.confirmations.submit')
    %span

  = render "links"
