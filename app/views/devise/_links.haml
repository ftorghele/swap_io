- if controller_name != 'sessions'
  = link_to I18n.t('devise.sessions.title'), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to I18n.t('devise.registrations.title'), new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to I18n.t('devise.passwords.title_resend'), new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to I18n.t('devise.confirmations.title'), new_confirmation_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to I18n.t('app.sign_in_with_link', :provider => provider.to_s.titleize), omniauth_authorize_path(resource_name, provider)
    %br/
