= javascript_include_tag 'rails.validations'

%h1= I18n.t('devise.registrations.title')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f|

  %fieldset

    %div
      = f.label :first_name
      = f.text_field :first_name

    %div
      = f.label :last_name
      = f.text_field :last_name

    %div
      = f.label :location
      .location
        = f.select :country, options_for_select([["Ã–sterreich", "AT"], ["Deutschland", "DE"], ["Schweiz", "CH"]])
        PLZ:
        = f.text_field :zip

    %div
      = f.label :email
      = f.email_field :email

    %div
      = f.label :password
      = f.password_field :password, :validate => false


    %button.form-submit.form-nextstep.right
      Weiter
      %span


  = render "links"
