%section.detail
  = render :partial => '/users/shared/user_sidebar', :locals => { :user =>current_user }
  %article.main
    %section.overview
      = render :partial => '/users/shared/overview_header'
      %section.overview-main
        %section.overview-subnav
          %h2= link_to "Posteingang", user_conversations_path(:box => "inbox"), :class => @box == "inbox" ? :active : :inactive
          %h2= link_to "Postausgang", user_conversations_path(:box => "sentbox"), :class => @box == "sentbox" ? :active : :inactive
          %h2= link_to "GelÃ¶schte Nachrichten", user_conversations_path(:box => "trash"), :class => @box == "trash" ? :active : :inactive

        %ul
          = content_tag_for(:li, @messages) do |receipt|
            - message = receipt.message
            %div{ :class => "user-conversation-message-#{receipt.read? ? :read : :unread}" }
              %h2= message.subject
              %p= message.body

        = render :partial => 'user_conversations/form', :locals => { :form_path => :reply_user_conversation }

