= form_tag form_path, :method => :post do

  %fieldset
    %div
      = label_tag :subject, I18n.t('helpers.label.user_conversations.subject')
      = text_field_tag :subject, params[:subject], :required => 'required'

    %div
      = label_tag :body, I18n.t('helpers.label.user_conversations.body')
      .body
        = text_area_tag :body, params[:body], :required => 'required'
    = hidden_field_tag :recipient_id, params[:recipient_id]
    %button.form-submit.form-nextstep.right
      = submit_text
      %span
.clr