!!! 5
%html{:lang => "de"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : I18n.t('app.headline')    
    = stylesheet_link_tag :application
    = csrf_meta_tags
    :css
      body {
        padding-top: 60px;
      }
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "#"} #{I18n.t('app.brand')}
          %ul.nav
            %li= link_to I18n.t('app.course_link'), courses_path
            %li= link_to I18n.t('app.course_request_link'), course_requests_path
          %ul.nav.pull-right
            - if user_signed_in?
              %p
                = I18n.t('app.signed_in_as')
                = link_to username(current_user), user_path(current_user)
                = I18n.t('app.not_you')
                = link_to I18n.t('app.sign_out_link'), destroy_user_session_path, :method => :delete
            - else
              %li= link_to I18n.t('app.sign_up_link'), new_user_registration_path
              %li= link_to I18n.t('app.sign_in_link'), new_user_session_path

    .container
      .content
        .row
          .span12
            - flash.each do |name, msg|
              = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
          .span9
            = yield

      %footer
        %p &copy; #{I18n.t('app.footer_text')}

    = javascript_include_tag :application
