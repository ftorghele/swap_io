- unless @course_request.users.blank?
  %h2 Diesen Begegnungswusch haben:
  - @course_request.users.each do |user|
    .course-request-members
      = link_to image_tag(userpic(user, :medium), :alt => username(user), :size => '60x60'), user_path(user)
      %p= link_to truncate(username(user), :length => 18, :omission => '..'), user_path(user)
      %p.small= "aus #{truncate(user.city, :length => 17, :omission => '..') unless user.city.nil?}"
    .clr
    %br
