= javascript_include_tag 'rails.validations'

=form_for @course, :validate => true, :url => {:controller => :courses, :action => :create, :type => @course_request} do |f|
  %fieldset
    %div
      = f.label :title
      = f.text_field :title

    %div
      = f.label :date
      = f.text_field :date

    %div
      = f.label :places
      = f.text_field :places

    %div
      = f.label :city
      = f.text_field :city

    %div
      = f.label :zip_code
      = f.text_field :zip_code

    %div
      = f.label :description
      = f.text_area :description, :size => "30x10"

    %div
      = f.label :category_id
      = f.select(:category_id, Category.all.collect {|f| [ f.title, f.id ] } , {:include_blank => I18n.t('course.new.select')} )

  %div.form-actions
    = f.submit I18n.t('course.new.submit'), :class => 'btn-primary'
