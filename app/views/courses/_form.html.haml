= javascript_include_tag 'rails.validations'

=form_for @course, :validate => true, :url => {:controller => :courses, :action => action} do |f|
  %fieldset
    %div
      = f.label :title
      = f.text_field :title

    %div
      = f.label :date
      = f.text_field :date

    %div
      = f.label :places
      = f.text_field :places

    %div
      = f.label :city
      = f.text_field :city

    %div
      = f.label :zip_code
      = f.text_field :zip_code

    %div
      = f.label :description
      = f.text_area :description, :size => "30x10"

    %div
      = f.label :precognitions
      = f.text_area :precognitions, :size => "30x10"

    %div
      = f.label :materials
      = f.text_area :materials, :size => "30x10"

    %div
      - for cat in Category.all
        = label_tag "checkbox_cat-#{cat.id}", cat.title
        = check_box_tag "checkbox_cat-#{cat.id}", "#{cat.id}", categories(cat), :name => "course[category_ids][]", :validate => true
        %br

  %div.form-actions
    = f.submit I18n.t('course.new.submit'), :class => 'btn-primary'
